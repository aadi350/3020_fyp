<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ARActivity">

    <fragment android:name="com.google.ar.sceneform.ux.ArFragment"
        android:id="@+id/ux_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/removeObjects"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginTop="5dip"
        android:layout_marginEnd="5dip"
        android:layout_gravity="right|top"
        android:backgroundTint="#CC0000"
        android:background="@drawable/roundcorner"
        android:padding="12dip"
        app:srcCompat="@drawable/baseline_delete_black_36" />
    </fragment>



    <RadioGroup
        android:id="@+id/change_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="20dip"
        android:orientation="horizontal"
        android:padding="12dip">

        <RadioButton
            android:id="@+id/radio_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Personal Item" />

        <RadioButton
            android:id="@+id/radio_carryon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checked="true"
            android:text="Carry-On"
            android:gravity="center"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/radio_duffel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Duffel"
            android:gravity="center"
            android:layout_weight="1"/>

    </RadioGroup>

</FrameLayout>


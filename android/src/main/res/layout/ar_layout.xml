<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ARActivity">

    <fragment android:name="com.google.ar.sceneform.ux.ArFragment"
        android:id="@+id/ux_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/onScreenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginStart="12dip"
            android:layout_marginTop="60dip"
            android:layout_marginEnd="12dip"
            android:background="@drawable/roundcorner_white"
            android:gravity="center"
            android:paddingHorizontal="8dip"
            android:paddingVertical="20dip"
            android:text="@string/promptText"
            android:textAlignment="center"
            android:textColor="#B4B4B4"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/removeObjects"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginTop="7dip"
            android:layout_marginEnd="7dip"
            android:layout_gravity="right|top"
            android:backgroundTint="#C70039"
            android:background="@drawable/roundcorner"
            android:padding="12dip"
            app:srcCompat="@drawable/baseline_delete_24" />


    </fragment>


    <RadioGroup
        android:id="@+id/change_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="20dip"
        android:orientation="horizontal"
        android:padding="12dip">

        <RadioButton
            android:id="@+id/radio_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:buttonTint="#7D3B84"
            android:checked="true"
            android:text="@string/personal_item"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/radio_carryon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:buttonTint="#7D3B84"
            android:checked="true"
            android:gravity="center"
            android:text="@string/carry_on"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/radio_duffel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:buttonTint="#7D3B84"
            android:checked="false"
            android:gravity="center"
            android:text="@string/duffel"
            android:textColor="#FFFFFF" />

    </RadioGroup>

    <TextView
        android:id="@+id/debugTextView"
        android:alpha="0.5"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_gravity="start|center"
        android:text="TextView" />
</FrameLayout>
